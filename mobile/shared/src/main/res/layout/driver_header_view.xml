<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="driver"
            type="dev.trotrohailer.shared.data.Driver" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/onboarding_animation_padding"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:src="@drawable/ic_default_avatar_3"
            app:avatar="@{driver.avatar}" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_normal"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="?alphaHigh"
                android:fontFamily="@font/google_sans_medium"
                android:text="@{driver.name}"
                android:textAppearance="?textAppearanceHeadline6"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="?alphaDisabled"
                android:fontFamily="@font/google_sans"
                android:text="@string/default_app_name"
                android:textAppearance="?textAppearanceBody2" />

        </LinearLayout>

    </LinearLayout>
</layout>